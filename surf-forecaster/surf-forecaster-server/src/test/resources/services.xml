	<bean id="waveWatchSystemV2"
		class="edu.unicen.surfforecaster.server.domain.wavewatch.WaveWatchSystemImpl">
		<constructor-arg index="0" value="Wavewatch System V2." />
		<constructor-arg index="1">
			<list>
				<ref bean="peakWaveHeight" />
				<ref bean="peakWaveDirection" />
				<ref bean="peakWavePeriod" />
				<ref bean="windU" />
				<ref bean="windV" />
			</list>
		</constructor-arg>
		<constructor-arg index="2" ref="gribDecoder" />
		<constructor-arg index="3" value="0 0 0,6,12,18 * * ?" />
		<constructor-arg index="4" ref="ftpGribAccess" />
		<constructor-arg index = "5" ref="persister"></constructor-arg>
	</bean>
	
