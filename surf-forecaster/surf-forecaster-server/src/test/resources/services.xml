	<bean id="ftpGribAccess"
		class="edu.unicen.surfforecaster.server.domain.wavewatch.FtpGribAccess">
		<property name="host" value="polar.ncep.noaa.gov" />
		<property name="downloadFilePath"
			value="/pub/waves/develop/multi_1.latest_run/multi_1.glo_30m.all.grb2" />
